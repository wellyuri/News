@using Shop.DataBase
@using Shop.Models
@model List<Product>
@{
    ViewBag.Title = "Index";
}
<h1 class="text-center">商品詳細</h1>
<p class="small text-muted text-right" >商品のコメントを知りたい方は、「コメント表示」をクリックしてください</p>
<table class="table">
    <tr class="bg-info">
        <th>ジャンル</th>
        <th>カテゴリ</th>
        <th>ID</th>
        <th>商品名</th>
        <th>主人公</th>
        <th>プレイヤー人数</th>
        <th>年齢制限</th>
        <th>値段</th>
        <th>コメント</th>
    </tr>

    @foreach (var product in Model)

    {
        <tr>
            <td>@product.GenreName</td>
            <td>@product.CategoryName</td>
            <td>@product.ProductId</td>
            <td>@product.ProductName</td>
            <td>@product.Character</td>
            <td>@product.MaxPlayer</td>
            <td>@product.MaxPlayer</td>
            <td>@product.Price</td>
            <td><a href="@Url.Action("Index","Comment",new {product.ProductId})">コメント表示</a></td>
        </tr>

    }

</table>

<form action="/Search/Index">
    <div class="form-group">
        <div class="text-right">
            <button type="submit" class="btn btn-primary">検索へ戻る</button>
        </div>
     </div>
</form>